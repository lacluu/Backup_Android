<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="488dp">

        <ImageView
            android:id="@+id/img_movie_card_lager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers"/>

        <TextView
            android:id="@+id/tv_movie_card_lager_title"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_movie_card_lager"
            android:layout_alignParentStart="true"
            android:padding="12dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff"
            android:text="Infinity War : Cuộc chiến vô cực"
            />

        <TextView
            android:id="@+id/tv_movie_card_lager_movie_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="400dp"
            android:textColor="#ffffffff"
            android:text="Đang Chiếu"
            />

        <TextView
            android:id="@+id/tv_movie_card_lager_imdb"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_movie_card_lager"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_view_border"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:text="9.1"

            />

        <TextView
            android:id="@+id/tv_movie_card_lager_booking_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_movie_card_lager_imdb"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_view_order_border"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Đặt vé"
            android:textAlignment="center"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
